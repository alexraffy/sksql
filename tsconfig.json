{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules", "build", "dist", "resources_master", "tests"
  ]
}